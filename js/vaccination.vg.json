{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Covid-19 vaccine doses administered per 100 population (cumulative)",
    "width": 1000,
    "height": 800,
    "data": {
      "url": "https://raw.githubusercontent.com/WenTanZac0625/FIT3179/main/js/world_map.geom.json",
      "format": {"type": "topojson","feature": "world.geo"}
    },
    "layer":[
      {
        "transform": [
          {"calculate": "'Data is not available in ' + datum.properties.geounit", "as": "note"}
         ],
         "mark":{"type": "geoshape", "fill":"lightgray", "stroke":"white"},
         "encoding":{"tooltip":{"field":"note"}}
      },
      {
        "transform": [
          {"lookup": "properties.geounit",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/WenTanZac0625/FIT3179/main/data/Total_vaccination(1).csv"
            },
            "key": "COUNTRY",
            "fields": ["TOTAL_VACCINATIONS_PER100"]
          }
        }
      ],

    "projection": {"type": "equirectangular"},
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "TOTAL_VACCINATIONS_PER100",
        "type": "quantitative",
        "title": "Total Vaccination",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.geounit", "type": "nominal", "title": "Country"},
        {"field": "TOTAL_VACCINATIONS_PER100", "type": "quantitative", "title": "Total Vaccination"}
      ]
    }
  }    
]
}



  